@*

*@
@{
       Layout = "/Views/Shared/_AdminLayout.cshtml";
}
<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,700,900&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="fonts/icomoon/style.css">


    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/assets/addProduct/css/bootstrap.min.css">
    
    <!-- Style -->
    <link rel="stylesheet" href="~/assets/addProduct/css/style.css">

    <title>Contact Form #9</title>
  </head>
  <body>
  

  <div class="content">
    @model product
    <div class="container">
      <div class="row align-items-stretch no-gutters contact-wrap">
        <div class="col-md-12">
          <div class="form h-100">
            <h3>Edit Product </h3>
            <form class="mb-5" name="contactForm" asp-action="updateProductItem" asp-controller="Admin"  asp-route-imgSrc="@TempData["productImgSrc"]" enctype="multipart/form-data">
              <div class="row">
                <div class="col-md-6 form-group mb-3">
                  <label for="" class="col-form-label">Name *</label>
                  <input type="text" class="form-control" placeholder =" product name"  asp-for="name" required>
                </div>
                <div class="col-md-6 form-group mb-3">
                  <label for="" class="col-form-label">price *</label>
                  <input type="text" class="form-control" asp-for="price"  placeholder="product price" required>
                </div>
                <div class="col-md-6 form-group mb-3">
                  <label for="" class="col-form-label">count *</label>
                  <input type="text" class="form-control"    asp-for="productCount" placeholder="product count" required>
                </div>
              </div>
              <div class="row">
                <div class="col-md-12 form-group mb-3">
                  <label for="budget" class="col-form-label">category</label>
                  <select class="custom-select"   asp-for="category">
                      <option value=0>sports</option>
                      <option value=1>ELECTRICAL APPLIANCES</option>
                      <option value=2>FOOD PRODUCTS</option>
                      <option value=3> TOYS</option>

                    </select>
                </div>
              </div>

              <div class="row">
                <div class="col-md-12 form-group mb-3">
                  <label for="message" class="col-form-label">product description *</label>
                  <textarea  required class="form-control"  cols="30" rows="4"  placeholder="Write product description" asp-for="description"></textarea>
                </div>
              </div>

               <div class="row">
                <div class="col-md-12 form-group mb-3">
                  
                  <img  style="max-width:300px; max-height:300px;"  src="~/@TempData["productImgSrc"]" />
                  <input type="file"  asp-for="img"  />
                </div>
              </div>

              <div class="row">
                <div class="col-md-12 form-group">
                  <input type="submit" value="Product Registration"
                  
                  class="btn btn-primary rounded-0 py-2 px-4">
                  <span class="submitting"></span>
                </div>
              </div>
            </form>
            <form asp-action="deleteProduct" asp-controller="Admin">
           <input type="submit"  value="delete" class="btn btn-primary rounded-0 py-2 px-4">
           </form>
          </div>
        </div>
      </div>
    </div>

  </div>
    

    <script src="~/assets/addProduct/js/jquery-3.3.1.min.js"></script>
    <script src="~/assets/addProduct/js/popper.min.js"></script>
    <script src="~/assets/addProduct/js/bootstrap.min.js"></script>
    <script src="~/assets/addProduct/js/jquery.validate.min.js"></script>
    <script src="~/assets/addProduct/js/main.js"></script>

  </body>
</html>