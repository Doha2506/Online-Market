@model IEnumerable<Market.Models.product>

@{
    ViewData["Title"] = "Search";
    Layout = "/Views/Shared/_AdminLayout.cshtml";
}



<!DOCTYPE html>
<html lang="en">
<head>
	<title>Table V01</title>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">

	<link rel="stylesheet" href="~/assets/addProduct/css/bootstrap.min.css">
	<link rel="stylesheet" type="text/css" href="~/assets/productTable/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
	<link rel="stylesheet" type="text/css" href="~/assets/productTable/vendor/animate/animate.css">
	<link rel="stylesheet" type="text/css" href="~/assets/productTable/vendor/select2/select2.min.css">

	<link rel="stylesheet" type="text/css" href="vendor/perfect-scrollbar/perfect-scrollbar.css">

	<link rel="stylesheet" type="text/css" href="~/assets/productTable/css/util.css">
	<link rel="stylesheet" type="text/css" href="~/assets/productTable/css/main.css">

	<link rel="stylesheet" href="~/assets/addProduct/css/style.css">
	
	
<style>
   
    .mb-5 {

        margin: 130px 150px 0px 350px;

    }
	.inp{
        margin:10px; 
        padding:7px;
        border:1px solid #ebebeb;
        border-radius:5px;
        background-color:#ebebeb;
        font-size:16px;
 
    }
    
  

</style>
</head>

<body>

	
	
		<form class="mb-5" name="contactForm" asp-action="AdminSearch" asp-controller="Admin" enctype="multipart/form-data">
              <div class="row">
                <div class="col-md-6 form-group mb-3">
                  <input class="inp" name="searchWord" type="text" class="form-control" placeholder =" Product Name"  required>
				 
			  </div>
			</div>
			<div class="row">
                <div class="col-md-12 form-group">
                  <input type="submit" value="Search" class="btn btn-primary rounded-0 py-2 px-4">
                  <span class="submitting"></span>
                </div>
              </div>
		</form>
	<div class="limiter">

		<div class="container-table100">
			<div class="wrap-table100">
				<div class="table100">
					<table>
						<thead>
							<tr class="table100-head" style="background: #2487ce;">
								<th class="column1">ID</th>
								<th class="column2">Name</th>
								<th class="column3">Description</th>
								<th class="column4">Price</th>
								<th class="column5">Category Name</th>


							</tr>
						</thead>
						<tbody>
							@if (Model.Count() == 0)
							{
								<tr>
									<td></td>
									<td></td>
									<td></td>
									<td></td>
									<td></td>
									<td></td>
									<td></td>
									<td></td>

								</tr>
							}
							else
							{
								foreach (var item in Model)
								{
									<tr>
									<td class="column1">@item.Id</td>
									<td class="column2">@item.name</td>
									<td class="column3">@item.description</td>
									<td class="column4">@item.price</td>

										@if(item.category == 0)
										{
												<td class="column5">Sports</td>
										}
										else if(item.category == 1)
										{
											<td class="column5">ELECTRICAL APPLIANCES</td>
										}

										else if(item.category == 2)
										{
											<td class="column5">FOOD PRODUCTS</td>
										}

										else if(item.category == 3)
										{
											<td class="column5">TOYS</td>
										}

										else
										{
											<td class="column5">None</td>
										}
										
								</tr>
								}
							}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>


	<script src="~/assets/productTable/vendor/jquery/jquery-3.2.1.min.js"></script>

	<script src="~/assets/productTable/vendor/bootstrap/js/popper.js"></script>
	<script src="~/assets/productTable/vendor/bootstrap/js/bootstrap.min.js"></script>

	<script src="~/assets/productTable/vendor/select2/select2.min.js"></script>

	<script src="~/assets/productTable/js/main.js"></script>

</body>
</html>

